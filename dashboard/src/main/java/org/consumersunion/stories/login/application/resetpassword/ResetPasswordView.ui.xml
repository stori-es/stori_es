<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:l="urn:import:org.consumersunion.stories.login.application.ui">

    <ui:with field="res" type="org.consumersunion.stories.login.resource.LoginResources"/>

    <g:HTMLPanel styleName="{res.loginStyle.panelMain}">
        <l:TitleWidget ui:field="title" title="Reset password" help="Enter a new password for your account."/>

        <form ui:field="form" action="javascript:void(0);">
            <input ui:field="password" type="password" name="password" placeholder="Password"/>
            <input ui:field="confirmPassword" type="password" name="confirm" placeholder="Confirm password"/>
            <input ui:field="submit" type="submit" name="submitButton" value="Submit"/>
        </form>

        <p>
            <a href="https://www.stori.es/support">Contact support</a>
        </p>
    </g:HTMLPanel>
</ui:UiBinder>
