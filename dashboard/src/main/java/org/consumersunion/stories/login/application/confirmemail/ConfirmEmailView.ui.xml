<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:l="urn:import:org.consumersunion.stories.login.application.ui">

    <ui:with field="res" type="org.consumersunion.stories.login.resource.LoginResources"/>

    <g:HTMLPanel styleName="{res.loginStyle.panelMain} {res.loginStyle.panelMainEmailSent}">
        <l:TitleWidget ui:field="title" title="Success"
                       help="You can now sign in with your primary email address or username."/>

        <input ui:field="signin" type="submit" name="submitButton" value="Sign in"/>

        <p>
            <a href="https://www.stori.es/support">Contact support</a>
        </p>
    </g:HTMLPanel>
</ui:UiBinder>
