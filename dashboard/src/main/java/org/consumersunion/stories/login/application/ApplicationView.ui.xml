<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:with field="res" type="org.consumersunion.stories.login.resource.LoginResources"/>

    <g:HTMLPanel styleName="{res.loginStyle.main}">
        <header>
            <div id="header" class="container">
                <div id="header-image">
                    <a href="https://www.stori.es/" title="The stori.es Platform for Digital Storytelling"></a>
                </div>
            </div>
        </header>

        <g:SimplePanel ui:field="main" styleName="{res.loginStyle.mainContent}"/>

        <footer>
            <div id="footer">
                <div class="copyright">
                    Our
                    <a href="https://github.com/stori-es/stori_es-policy/blob/master/stori_es-privacy_policy.md">Privacy Policy</a>,
                    <a href="https://github.com/stori-es/stori_es-policy/blob/master/stori_es-terms_of_service.md">Terms of Service</a>
                    and
                    <a href="https://github.com/stori-es/stori_es-policy/blob/master/stori_es-software_as_a_service_agreement.md">Software as a Service Agreement
                    </a>
                </div>
            </div>
        </footer>
    </g:HTMLPanel>
</ui:UiBinder>
