<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:c="urn:import:com.googlecode.gwt.charts.client.geochart">

    <ui:with field="resource" type="org.consumersunion.stories.dashboard.client.resource.Resources"/>

    <ui:style gss="true">
        .height {
            height: 350px;
        }

        path:not([fill^="#f5f5f5"]):hover {
            cursor: pointer;
        }
    </ui:style>

    <c:GeoChart ui:field="chart" styleName="{resource.generalStyleCss.w100} {style.height}"/>
</ui:UiBinder>
