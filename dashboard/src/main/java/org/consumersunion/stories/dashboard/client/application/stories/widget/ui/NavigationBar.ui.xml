<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:with field="res" type="org.consumersunion.stories.dashboard.client.resource.Resources"/>

    <ui:style>
        .main button {
            float: left;
            -webkit-border-radius: 3px;
            -moz-border-radius: 3px;
            border-radius: 3px;
            padding: 7px 10px;
        }

        .main button:hover {
            background-color: #ffb200;
        }
    </ui:style>

    <g:HTMLPanel styleName="{res.generalStyleCss.navBar}">
        <g:Button ui:field="storiesButton" text="Builder"
                  styleName="{res.generalStyleCss.buttonTab} {res.generalStyleCss.selectedTab}"/>
        <div class="{res.generalStyleCss.clearBoth}"/>
    </g:HTMLPanel>
</ui:UiBinder>
