<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:f="urn:import:org.consumersunion.stories.dashboard.client.application.ui.token">

    <ui:with field="resource" type="org.consumersunion.stories.dashboard.client.resource.Resources"/>

    <ui:style>
        .richTextLabel {
            margin-bottom: 10px;
        }
    </ui:style>

    <g:HTMLPanel>
        <g:Label text="Add Autotags"
                 styleName="{resource.generalStyleCss.bigTitle}"
                 addStyleNames="{style.richTextLabel}"/>
        <f:TokenInput ui:field="tokens" styleName="{resource.generalStyleCss.textInput}"
                      width="99%" height="50px"/>
    </g:HTMLPanel>
</ui:UiBinder>
