<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:style>
        .main {
            font-size: 16px;
            font-family: "Droid Sans", sans-serif;
            line-height: 30px;
            text-align: left;
        }

        .clickable {
            cursor: pointer;
        }
    </ui:style>

    <g:HTMLPanel styleName="{style.main}">
        <g:Label ui:field="addContent" styleName="{style.clickable}">Add Content</g:Label>
        <g:Label ui:field="addNote" styleName="{style.clickable}">Add Note</g:Label>
        <g:Label ui:field="addAttachment" styleName="{style.clickable}">Add Attachment</g:Label>
    </g:HTMLPanel>
</ui:UiBinder>
