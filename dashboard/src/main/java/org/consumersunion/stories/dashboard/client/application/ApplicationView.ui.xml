<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:style gss="true">
        #messages {
            position: fixed;
            width: 100%;
            left: 0;
            bottom: 0;
            z-index: 130;

            min-height: 69px;
            height: 69px;
            max-height: calc(100% - 109px);
        }

        #messages > div {
            height: 100%;
        }
    </ui:style>

    <g:HTMLPanel>
        <div id="messages">
            <g:SimplePanel ui:field="messagePanel"/>
        </div>
        <g:SimplePanel ui:field="main"/>
    </g:HTMLPanel>
</ui:UiBinder>
