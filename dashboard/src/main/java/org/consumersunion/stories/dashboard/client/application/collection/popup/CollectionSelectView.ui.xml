<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:form="urn:import:org.consumersunion.stories.common.client.ui.form">

    <ui:with field="resource" type="org.consumersunion.stories.dashboard.client.resource.Resources"/>

    <ui:style>
        .wrapper {
            padding: 10px;
            width: 380px;
        }

        .bigTitle {
            color: #666666;
            font-size: 15px;
            font-family: 'Droid Sans', sans-serif;
            font-weight: bold;
            margin-bottom: 10px;
        }

        .formWrapper {
            padding: 20px 0;
        }

        .errorLabel {
            color: red;
        }

        .buttonWrapper {
            margin-top: 20px;
        }

        .cancel {
            margin-left: 15px;
            font-weight: bold;
            cursor: pointer;
        }
    </ui:style>

    <g:PopupPanel modal="true" autoHideEnabled="true" glassEnabled="true">
        <g:HTMLPanel styleName="{style.wrapper}">
            <g:DeckPanel ui:field="switchPanel">
                <g:HTMLPanel>
                    <div style="margin-bottom: 5px;">
                        <g:InlineLabel ui:field="modalTitle" styleName="{style.bigTitle}"/>
                        <g:Button ui:field="newCollection"/>
                    </div>
                    <form:Form ui:field="form"/>
                </g:HTMLPanel>

                <g:HTMLPanel>
                    <g:Label ui:field="newLabel" styleName="{style.bigTitle}"/>
                    <div class="{style.formWrapper}">
                        <g:TextBox ui:field="collectionTitle" width="360px"/>
                        <g:Label ui:field="errorLabel" styleName="{style.errorLabel}"/>
                    </div>
                </g:HTMLPanel>
            </g:DeckPanel>

            <div class="{style.buttonWrapper} {resource.generalStyleCss.floatRight}">
                <g:Button ui:field="done" text="Done" styleName="{resource.buttonStyleCss.button}"/>
                <g:Anchor ui:field="cancel" text="Cancel" styleName="{style.cancel}"/>
            </div>
            <div style="clear: both"/>
        </g:HTMLPanel>
    </g:PopupPanel>
</ui:UiBinder>
