<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:u="urn:import:org.consumersunion.stories.common.client.ui.questionnaire"
             xmlns:v="urn:import:org.consumersunion.stories.dashboard.client.application.questionnaire.ui">

    <ui:style>
        .storyContentWrapper {
            margin-bottom: 10px;
        }
    </ui:style>

    <g:HTMLPanel>
        <g:HTML ui:field="storyContent" styleName="{style.storyContentWrapper}"/>
        <g:DeckPanel ui:field="answerSetPanel">
            <u:QuestionnaireRenderer ui:field="questionnaireRenderer"/>
            <v:DegradedAnswerSetRenderer ui:field="degradedRenderer"/>
        </g:DeckPanel>
    </g:HTMLPanel>
</ui:UiBinder>
