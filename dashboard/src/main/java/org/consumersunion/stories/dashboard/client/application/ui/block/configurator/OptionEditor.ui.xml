<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:style>
        .icon {
            display: inline-block;
            margin-left: 5px;
        }

        .move {
            cursor: n-resize;
        }

        .delete {
            cursor: pointer;
        }
    </ui:style>

    <g:HTMLPanel>
        <g:TextBox ui:field="value"/>
        <g:Label ui:field="move" styleName="{style.icon} {style.move} icon-resize-vertical"/>
        <g:Label ui:field="delete" styleName="{style.icon} {style.delete} icon-trash"/>
    </g:HTMLPanel>
</ui:UiBinder>
