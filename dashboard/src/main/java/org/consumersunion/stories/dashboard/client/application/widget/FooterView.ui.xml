<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:style>
        .footerWrapper {
            font-family: 'Droid Sans', sans-serif;
            font-weight: bold;
            color: #3f3427;
            font-size: 15px;
            padding-bottom: 30px;
            margin-top: 20px;
            margin-left: 20px;
            text-shadow: white 0 1px 0;
        }

        .footerMenu {
            list-style: none;
            margin-bottom: 20px;
            padding-left: 0;
        }

        .footerMenu li {
            display: inline;
            padding-left: 14px;
            padding-right: 14px;
            border-right: 1px solid #3f3427;
            font-size: 17px;
        }

        .footerMenu li a {
            color: #3f3427;
        }

        .footerMenu li a:hover {
            color: #0059b2;
            text-decoration: none;
        }

        .footerMenu li:first-child {
            padding-left: 0;

        }

        .footerMenu li:last-child {
            border-right: none;
        }
    </ui:style>

    <g:HTMLPanel styleName="{style.footerWrapper}">
        <ul class="{style.footerMenu}">
            <li>
                <a href="https://github.com/stori-es/stori_es-policy/blob/master/stori_es-privacy_policy.md">Privacy Policy</a>
            </li>
            <li>
                <a href="https://github.com/stori-es/stori_es-policy/blob/master/stori_es-terms_of_service.md">Terms of Service</a>
            </li>
            <li>
                <a href="https://github.com/stori-es/stori_es-policy/blob/master/stori_es-software_as_a_service_agreement.md">Software as a Service Agreement</a>
            </li>
            <li>
                <a href="mailto:stories@cr.consumer.org">Support</a>
            </li>
        </ul>
    </g:HTMLPanel>
</ui:UiBinder>
