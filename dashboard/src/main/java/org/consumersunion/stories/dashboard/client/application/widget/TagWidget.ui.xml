<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:with field="res" type="org.consumersunion.stories.dashboard.client.resource.Resources"/>
    <ui:style>
        .tag {
            display: inline-block;

            background-color: #f5f5f5;
            border: 1px solid #d4d4d4;
            border-radius: 4px;
            line-height: 26px;
            padding: 0 4px;
            color: #000;
            margin-right: 8px;
        }

        .tag:hover {
            cursor: pointer;
            border-color: #0059b2;
            color: #0059b2;
        }
    </ui:style>

    <g:HTMLPanel ui:field="main" styleName="simptip-position-top {style.tag}">
        <span ui:field="tagContainer"/>
        <span ui:field="remove"
              class="simptip-position-top {res.generalStyleCss.delete} {res.generalStyleCss.tagRemove}"/>
    </g:HTMLPanel>
</ui:UiBinder>
