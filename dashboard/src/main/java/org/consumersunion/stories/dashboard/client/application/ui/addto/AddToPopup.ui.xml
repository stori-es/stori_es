<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:style>
        .main {
            font-size: 16px;
            font-family: "Droid Sans", sans-serif;
            line-height: 30px;
            text-align: left;
        }

        .main div {
            cursor: pointer;
        }
    </ui:style>

    <g:HTMLPanel styleName="{style.main}">
        <g:Label ui:field="addToCollections">Add To Collection(s)</g:Label>
        <g:Label ui:field="addTags">Add Tag(s)</g:Label>
        <g:Label ui:field="addNote">Add Note</g:Label>
    </g:HTMLPanel>
</ui:UiBinder>
