<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:with field="res" type="org.consumersunion.stories.dashboard.client.resource.Resources"/>

    <ui:style>
        .addDocument {
            float: right;
            font-size: 30px;
        }

        .addDocument i {
            cursor: pointer;
        }
    </ui:style>

    <g:HTMLPanel ui:field="main" styleName="{res.generalStyleCss.navBar}">
        <g:Button ui:field="summaryButton" text="Summary"
                  styleName="{res.generalStyleCss.buttonTab}"/>
        <g:Button ui:field="storiesButton" text="Stories"
                  styleName="{res.generalStyleCss.buttonTab}"/>
        <g:Button ui:field="builderButton" text="Builder"
                  styleName="{res.generalStyleCss.buttonTab}"/>
        <g:Button ui:field="documentsButton" text="Documents"
                  styleName="{res.generalStyleCss.buttonTab}"/>
        <div ui:field="addButton" class="{res.generalStyleCss.blue} {style.addDocument}">
            <i ui:field="addDocument" class="icon-plus-sign-alt"/>
        </div>
        <div class="{res.generalStyleCss.clearBoth}"/>
    </g:HTMLPanel>
</ui:UiBinder>
