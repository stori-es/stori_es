<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:style>
        .buttonLabel {
            cursor: pointer;
            color: #0059b2;
            font-size: 18px;
            font-weight: bold;
            float: right;
            margin-top: 5px;
            font-family: 'Droid Sans', sans-serif;
        }

        .mapButton {
            float: right;
            margin-left: 5px;
            cursor: pointer;
            color: #0059B2;
        }
    </ui:style>

    <g:HTMLPanel ui:field="main">
        <g:Label ui:field="mapButton" styleName="{style.mapButton} icon-2x"/>
        <g:InlineLabel ui:field="mapLabel" text="Map" styleName="{style.buttonLabel}"/>
    </g:HTMLPanel>
</ui:UiBinder>
