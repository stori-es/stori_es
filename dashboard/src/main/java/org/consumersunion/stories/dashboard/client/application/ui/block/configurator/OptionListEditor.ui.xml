<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:with field="resources" type="org.consumersunion.stories.dashboard.client.resource.Resources"/>

    <g:HTMLPanel addStyleNames="{resources.blockConfigurators.optionsList}">
        <g:FlowPanel ui:field="optionsPanel" visible="false"/>
        <div class="{resources.blockConfigurators.buttonContainer}">
            <g:Button ui:field="addOption" text="Add Option"/>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>
