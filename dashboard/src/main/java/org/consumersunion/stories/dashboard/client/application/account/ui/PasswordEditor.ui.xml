<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <ui:with field="resources" type="org.consumersunion.stories.common.client.resource.CommonResources"/>

    <ui:style>
        .row {
            margin-bottom: 15px;
        }

        .label {
            display: block;
        }
    </ui:style>

    <g:HTMLPanel>
        <div class="{style.row}">
            <g:Label styleName="{style.label}" text="Current password *"/>
            <g:PasswordTextBox ui:field="oldPassword" width="200px"/>
        </div>

        <div class="{style.row}">
            <g:Label styleName="{style.label}" text="New password *"/>
            <g:PasswordTextBox ui:field="newPassword" width="200px"/>
        </div>

        <div class="{style.row}">
            <g:Label styleName="{style.label}" text="Confirm password *"/>
            <g:PasswordTextBox ui:field="passwordConfirmation" width="200px"/>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>
