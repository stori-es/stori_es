<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder' xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:style>
        .description {
            font-size: 90%;
        }
    </ui:style>

    <g:HTMLPanel>
        <g:Label ui:field="title"/>
        <iframe ui:field="video" width="560" height="315" frameborder="0"></iframe>
        <g:Anchor ui:field="videoAnchor" visible="false"/>
        <g:HTML ui:field="description" styleName="{style.description}"/>
    </g:HTMLPanel>
</ui:UiBinder>
