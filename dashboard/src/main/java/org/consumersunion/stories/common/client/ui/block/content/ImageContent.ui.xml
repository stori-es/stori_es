<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:style>
        img.image {
            display: block;
            margin: 0 auto;
            max-width: 100%;
        }
    </ui:style>
    <g:HTMLPanel styleName="stories-image">
        <g:Image ui:field="image" styleName="{style.image}"/>
        <g:HTML ui:field="caption"/>
    </g:HTMLPanel>
</ui:UiBinder>
