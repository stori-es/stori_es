<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:style>
        .wrapper {
            margin-bottom: 5px;
        }

        .wrapper a {
            display: block;
            width: 200px;
            float: left;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        .wrapper button {
            float: left;
            margin-left: 5px;
            border: none;
            background: none;
            color: #ccc;
        }

        .wrapper button:hover {
            float: left;
            margin-left: 5px;
            border: none;
            background: none;
            color: #545454;
        }
    </ui:style>

    <g:HTMLPanel styleName="{style.wrapper}">
        <a ui:field="link" target="_blank"/>
        <g:Button ui:field="remove" styleName="icon-remove"/>
        <div style="clear: both;"/>
    </g:HTMLPanel>
</ui:UiBinder>
