    <ui:with field="resources" type="org.consumersunion.stories.survey.client.resource.Resources"/>

    <ui:style>
        .main {
            width: 100%;
            text-align: center;
        }
    </ui:style>

    <g:HTMLPanel styleName="{style.main}">
        <h1>Ooops!</h1>
        <g:HTML ui:field="alert" styleName="{resources.generalStyleCss.alert}" visible="false"/>
    </g:HTMLPanel>
</ui:UiBinder>
